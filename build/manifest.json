{
  "manifest_version": 3,
  "version": "0.5.0",
  "name": "Markdown Editor",
  "short_name": "Markdown Editor",
  "description": "A Github Flavored Markdown Editor",
  "offline_enabled": true,
  "icons": {
    "16": "icons/markdown-editor-16.png",
    "48": "icons/markdown-editor-48.png",
    "128": "icons/markdown-editor-128.png"
  },
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "19": "icons/markdown-editor-19.png",
      "38": "icons/markdown-editor-38.png"
    }
  }
}
